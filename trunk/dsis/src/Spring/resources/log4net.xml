<?xml version="1.0" encoding="utf-8" ?>
<!-- This section contains the log4net configuration settings -->
<log4net>
  <!-- Define some output appenders -->
  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%10logger %-5level - %message%newline" />
    </layout>
  </appender>

  <appender name="SpringConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%message%newline" />
    </layout>
  </appender>


  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <file value="${log-file}" />
    <appendToFile value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10Mb" />
    <staticLogFileName value="true" />
    <datePattern value="yyyyMMdd-HHmm" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date[%6.6thread].%-5level %30.30logger - %message%newline" />
    </layout>
  </appender>

  <!-- Setup the root category, add the appenders and set the default priority -->

  <category name="Spring" additivity="false">
    <level value="INFO"/>
    <appender-ref ref="SpringConsoleAppender" />
  </category>
  
  <category name="DSIS.Spring.SpringIoC">
    <level value="INFO"/>    
  </category>
  
  <root>
    <level value="DEBUG" />
    <appender-ref ref="ConsoleAppender" />
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>
